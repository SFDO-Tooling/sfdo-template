#!/usr/local/bin/zsh
# This hook is sourced after this virtualenv is activated.

# PATH settings
export PROJECT_ROOT=$(pwd)
export PATH=$PROJECT_ROOT/node/bin:$PROJECT_ROOT/node_modules/.bin:$PATH

# DB settings
export POSTGRES_DB={{cookiecutter.project_slug}}

# General settings
export DJANGO_SETTINGS_MODULE={{cookiecutter.project_slug}}.settings.base
export DJANGO_SECRET_KEY='CHANGEME!!!'
export DJANGO_ALLOWED_HOSTS=localhost,.{{cookiecutter.project_slug}}.com
export DJANGO_DEBUG=True

# Security! Better to use DNS for this task, but you can use redirect
export DJANGO_SECURE_SSL_REDIRECT=False
